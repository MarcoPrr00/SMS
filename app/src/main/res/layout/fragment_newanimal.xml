<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newanimale"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="#65503F"
    android:backgroundTint="#65503F">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img"
        android:layout_width="152dp"
        android:layout_height="152dp"
        android:layout_gravity="center"
        android:backgroundTint="#FA783535"
        android:contentDescription="@string/imagenuova"
        android:src="@drawable/prova1"
        app:civ_border_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nuovaimmagine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="96dp"
        android:background="#3EFFFFFF"
        android:clickable="true"
        android:contentDescription="@string/tastopercaricamento"
        android:focusable="true"
        app:backgroundTint="#52FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/testo"
        app:layout_constraintStart_toStartOf="@+id/img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_camera_alt_black_24dp" />

    <TextView
        android:id="@+id/testo"
        android:layout_width="229dp"
        android:layout_height="135dp"
        android:fontFamily="@font/coustard"
        android:text="Un nuovo amico tra noi!"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toEndOf="@+id/img"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
