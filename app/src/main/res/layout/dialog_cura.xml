<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">


    <TextView
        android:id="@+id/tipoCura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tipoCura"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/cura_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cura_edit"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prezzo"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/prezzo_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prezzo"
        android:inputType="numberDecimal"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/calendarViewCura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/calendarViewCura" />


</LinearLayout>