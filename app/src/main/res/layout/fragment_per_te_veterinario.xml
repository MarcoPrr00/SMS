<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8D89D"
    tools:context=".Fragment.PerTeVeterinarioFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container_per_te"/>

    <TextView
        android:id="@+id/elencospese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/coustard"
        android:hint="@string/elencospese"
        android:padding="14dp"
        android:textAlignment="center"
        android:textColorHint="@color/colorSecondaryVariant"
        android:textSize="28dp" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_veterinario"
        android:paddingTop="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:layout_alignBaseline="@+id/elencospese"
        android:backgroundTint="#00FFFFFF" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_nuova_segnalazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#65503F"
        android:contentDescription="@string/nuovaSegnalazione"
        app:srcCompat="@drawable/ic_baseline_add_24"
         />


</RelativeLayout>