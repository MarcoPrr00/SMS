<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:backgroundTint="#F8D89D"
        android:background="@drawable/dialog_bg"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Fragment.QRCODEFragment"
        >

    <TextView
        android:id="@+id/choose_for_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/coustard"
        android:text="@string/qrcode"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/colorSecondaryVariant"
        android:textSize="28dp" />





        <ImageView
            android:id="@+id/img_qrcode"
            android:layout_width="600px"
            android:layout_height="600px"
            android:layout_gravity="center"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_codividi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#65503F"
            android:contentDescription="@string/nuovaSegnalazione"
            app:srcCompat="@android:drawable/ic_menu_share"
            />



    </LinearLayout>
