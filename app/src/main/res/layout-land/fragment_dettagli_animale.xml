<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragment.DettagliAnimale"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8D89D"
    >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_dettagli_animale"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="15dp"
        android:elevation="20dp"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/dettagli_segnalazioni"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ABF8D89D"
                android:padding="8dp"
                android:orientation="vertical">




                <ImageView
                    android:id="@+id/img_dettagli_animale"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/nome_animale"
                    android:textSize="15dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    app:boxStrokeWidth="0dp"
                    app:hintTextColor="@color/black"
                    >

                    <TextView
                        android:id="@+id/txt_dettagli_nome"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="0dp"
                        android:background="#90F5EBE6"
                        android:text="@string/nome_animale"
                        android:textSize="20dp"
                        android:gravity="center"
                        tools:ignore="SpeakableTextPresentCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/padrone"
                    android:textSize="15dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    app:boxStrokeWidth="0dp"
                    app:hintTextColor="@color/black"
                    >

                    <TextView
                        android:id="@+id/txt_dettagli_padrone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="64dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="0dp"
                        android:background="#90F5EBE6"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="@string/padrone"
                        tools:ignore="SpeakableTextPresentCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/preferenza"
                    android:textSize="15dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:minHeight="48dp"
                    >

                    <TextView
                        android:id="@+id/txt_dettagli_preferenza_cibo"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="0dp"
                        android:autofillHints=""
                        android:background="#90F5EBE6"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="@string/preferenza"
                        tools:ignore="SpeakableTextPresentCheck" />
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/eta"
                    android:textSize="15dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:minHeight="48dp"
                    >

                    <TextView
                        android:id="@+id/eta_animale"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="0dp"
                        android:autofillHints=""
                        android:background="#90F5EBE6"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="@string/eta"
                        tools:ignore="SpeakableTextPresentCheck" />
                </com.google.android.material.textfield.TextInputLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/sesso_animale_text"
                    android:textSize="15dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:minHeight="48dp"
                    >

                    <TextView
                        android:id="@+id/sesso_animale"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="0dp"
                        android:autofillHints=""
                        android:background="#90F5EBE6"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="@string/sesso_animale_text"
                        tools:ignore="SpeakableTextPresentCheck" />
                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/albumfoto"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:text="@string/albumfoto"
                    android:textSize="18sp"
                    app:cornerRadius="10dp" />



            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
