<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tipoSpesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spesa"
                    android:textColor="#B36A0D"
                    android:textFontWeight="1000"
                    android:textSize="30dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/PrezzoSpesa"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prezzo"
                    android:textColor="#B36A0D"
                    android:textFontWeight="1000"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="#B36A0D"
                    android:textFontWeight="1000"
                    android:textSize="30dp"/>

                <TextView
                    android:id="@+id/DataSpesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/data"
                    android:textColor="#B36A0D"
                    android:textFontWeight="1000"
                    android:textSize="30dp" />

            </LinearLayout>


            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/cancellaSpesa"
                    android:layout_width="50dp"
                    android:layout_height="54dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="#00FFFFFF"
                    android:backgroundTint="#00FFFFFF"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    android:drawableTop="@drawable/ic_baseline_delete_forever2_24"
                    android:textSize="12sp" />

            </FrameLayout>

    </RelativeLayout>
        </androidx.cardview.widget.CardView>

</RelativeLayout>
</RelativeLayout>