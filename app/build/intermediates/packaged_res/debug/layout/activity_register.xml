<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".RegisterActivity"
    android:background="@drawable/prova2">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:contentDescription="@string/logoimage"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />


    <Spinner
        android:id="@+id/tipologia"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:autofillHints=""
        android:background="#90F5EBE6"
        android:backgroundTint="#90F5EBE6"
        android:contentDescription="@string/Tipologia"
        android:overlapAnchor="false"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"

        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/insertname"
        android:layout_width="360dp"
        android:layout_height="66dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipologia"
        app:startIconDrawable="@mipmap/ic_account_circle_black_24dp"
        app:startIconTint="@color/black">

        <EditText
            android:id="@+id/name"
            android:layout_width="360dp"
            android:layout_height="64dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="0dp"
            android:autofillHints=""
            android:backgroundTint="#90F5EBE6"
            android:hint="@string/Nickname"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp"
            tools:ignore="SpeakableTextPresentCheck,TextContrastCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nomecognome"
        android:layout_width="360dp"
        android:layout_height="66dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/insertname"
        app:startIconDrawable="@mipmap/ic_pan_tool_black_24dp"
        app:startIconTint="@color/black">

        <EditText
            android:id="@+id/username"
            android:layout_width="360dp"
            android:layout_height="64dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="0dp"
            android:autofillHints=""
            android:backgroundTint="#90F5EBE6"
            android:hint="@string/Nominativo"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/insert"
        android:layout_width="360dp"
        android:layout_height="66dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomecognome"
        app:startIconDrawable="@mipmap/ic_face_black_24dp"
        app:startIconTint="@color/black">


        <EditText
            android:id="@+id/email"
            android:layout_width="360dp"
            android:layout_height="64dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="0dp"
            android:autofillHints=""
            android:backgroundTint="#90F5EBE6"
            android:hint="@string/emailutente"
            android:inputType="textWebEmailAddress|text"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.659"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteY="445dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inspass"
        android:layout_width="360dp"
        android:layout_height="66dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/insert"
        app:startIconDrawable="@mipmap/ic_lock_black_24dp"
        app:startIconTint="@color/black">

        <EditText
            android:id="@+id/password"
            android:layout_width="360dp"
            android:layout_height="64dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="0dp"
            android:autofillHints=""
            android:backgroundTint="#90F5EBE6"
            android:hint="@string/passwordutenteamico"
            android:inputType="textPassword"
            tools:ignore="SpeakableTextPresentCheck,TextContrastCheck"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="541dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="367dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="9dp"
        android:backgroundTint="#5A4737"
        android:text="@string/registratibut"
        android:textColor="#FDF9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inspass" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="215dp"
        android:layout_height="29dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="91dp"
        android:text="@string/hai_gi_un_account_clicca_qui"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register"
        tools:ignore="TextContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>